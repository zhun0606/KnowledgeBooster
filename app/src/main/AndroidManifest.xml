<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.knowledgebooster">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.Register">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.knowledgebooster.com"
                    android:pathPrefix="/main"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.SignIn" />
        <activity
            android:name=".BottonNavigation.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".OwnProfile.OwnDetailActivity"
            android:label="@string/title_activity_own_detail" />
        <activity
            android:name=".BottonNavigation.QuestionBottomNavigation"
            android:label="@string/title_activity_question_bottom_navigation" />
        <activity android:name=".CreateQuestion.MyQuestion" />
        <activity android:name=".CreateQuestion.CreateQuestionActivity" />
        <activity android:name=".CreateQuestion.SetQuestionActivity" />
        <activity android:name=".CreateQuestion.SetExplanationActivity" />
        <activity
            android:name=".BottonNavigation.NewsBottomNavigation"
            android:label="@string/title_activity_news_bottom_navigation" />
        <activity android:name=".Message.MessageSearchIdActivity" />
        <activity
            android:name=".OtherUserProfile.OtherUserProfile"
            android:label="@string/title_activity_other_user_profile" />
        <activity android:name=".Message.SendMessage"></activity>
    </application>

</manifest>